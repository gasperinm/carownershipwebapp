@page
@model CarOwnershipWebApp.Areas.Identity.Pages.Account.AddedCarsModel
@{
    ViewData["Title"] = "List of cars";
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-4">
    <section>
        <form method="get">
            <input type="hidden" name="handler" value="CarDetails" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vin"></label>
                <input asp-for="Vin" class="form-control" />
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
